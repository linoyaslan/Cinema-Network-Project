<!DOCTYPE html>
<html>
<head>
    <link href="~/css/Style.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--
           <style>

        .navbar > .container > .navbar-header > a {
            color: white !important;
        }

        .navbar > .container > .navbar-header > a:hover {
            opacity: 0.8 !important;
        }
    </style>
    -->

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #AA3A3A;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("Cinema", "Gallery", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Home", "Gallery", "Home")</li>
                    @if(string.IsNullOrEmpty(Session["login"] as String)) { 
                        <li>@Html.ActionLink("SignUp", "SignUp", "Home")</li>
                        <li>@Html.ActionLink("Login", "Login", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    }
                    <li><i class="fas fa-shopping-cart"></i></li>
                    <li>
                        <a href="@Url.Action("Cart", "Home")">
                            <span class="glyphicon glyphicon-shopping-cart"></span>
                            Cart
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="color: white;">
            <p>&copy; @DateTime.Now.Year - Linoy & Tzlil App</p>
        </footer>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>

</html>
